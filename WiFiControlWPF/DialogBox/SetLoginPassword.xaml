<Window x:Class="WiFiControlWPF.DialogBox.SetLoginPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WiFiControlWPF.DialogBox"
        mc:Ignorable="d"
        Title="Выставление логина/пароля сети" Height="212.979" Width="400" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock FontSize="14" Margin="0,0,0,6"><Run Text="Введите логин"/></TextBlock>
            <TextBox x:Name="LogBox" FontSize="14" Margin="0,0,0,8"/>
            <TextBlock FontSize="14" Margin="0,0,0,6"><Run Text="Введите пароль"/></TextBlock>
            <TextBox x:Name="PassBox" FontSize="14" Margin="0,0,0,6"/>

            <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0" Content="OK"/>
                <Button IsCancel="True" MinWidth="60" Content="Отмена"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>